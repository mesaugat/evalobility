# AWS Configuration
# Your AWS credentials should be configured via AWS CLI or these environment variables
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=INFO

# Knowledge Base Configuration
KNOWLEDGE_BASE_ID=your_knowledge_base_id_here
MIN_SCORE=0.5

# Bedrock Configuration
BEDROCK_GUARDRAIL_ID=your_bedrock_guardrail_id_here
BEDROCK_GUARDRAIL_VERSION=your_bedrock_guardrail_version_here

# Datadog Configuration
# Your Datadog API key and Application key for LLM Observability
DD_API_KEY=your_datadog_api_key_here
DD_APPLICATION_KEY=your_datadog_application_key_here

# Datadog site (default: datadoghq.com)
DD_SITE=datadoghq.com

# Environment name (e.g., dev, staging, prod)
DD_ENV=prod

# Service name for Datadog
DD_SERVICE=wwktm-kb-agent

# Enable Datadog debug logging (optional)
# DD_TRACE_DEBUG=false

# OpenTelemetry Configuration (Strands/Datadog)
OTEL_EXPORTER_OTLP_TRACES_PROTOCOL="http/protobuf"
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT="https://otlp.datadoghq.com/v1/traces"
OTEL_EXPORTER_OTLP_TRACES_HEADERS="dd-api-key=your_datadog_api_key_here,dd-otlp-source=datadog"
OTEL_SEMCONV_STABILITY_OPT_IN="gen_ai_latest_experimental"
